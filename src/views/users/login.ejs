<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include("../partials/head.ejs") %>
    </head>
<body>
    <%- include("../partials/header.ejs") %>
    <main class="main-login-register">
        <h2 class="title">
            
            INICIAR SESIÓN
            
        </h2>

       <!-- <section class="efecto-principal">
            <h2 class="lines-effect">INICIAR SESIÓN</h2>
        </section>-->
        <form class="login-register-form" action="/users/login" method="POST">
            <div>
                <label for="email">Email</label>
                <input class='control' type="email" id="email" name="email" placeholder="ejemplo@gmail.com"
                value='<%= locals.oldData ? oldData.email : null %>'>

                <% if (locals.errors && errors.email) { %>
                    <div class="errorValidacion">
                        <p><%= errors.email.msg %></p>
                    </div> 
                <% } %>
            </div>
            <div>
                <label for="password">Contraseña</label>
                <input class='control' type="password" id="password" name="password" placeholder="Contraseña"
                value= '<%= locals.oldData ? oldData.password : null %>'>
                <a href=#><p>¿Olvidaste tu contraseña?</p></a>

                <% if (locals.errors && errors.password) { %>
                    <div class="errorValidacion">
                        <p><%= errors.password.msg %></p>
                    </div> 
                <% } %>
            </div>
            <div class="login-register-btn" id="remember">
                <label for="remember"><p>Recordar mi usuario</p></label>
                <input type="checkbox" id="remember" name="rememberUser">
            </div>
            <div class="login-register-btn">
                <input class="button" type="submit" value="INICIAR SESIÓN">
                <p>¿No tenés cuenta? <a href="/users/register">Registrate acá!</a></p>
            </div>
        </form>
        <%- include("../partials/seguinos.ejs") %>
        <%- include("../partials/conoceMas.ejs") %>
    
    </main>   
    <%- include("../partials/footer.ejs") %>
</body>
</html>