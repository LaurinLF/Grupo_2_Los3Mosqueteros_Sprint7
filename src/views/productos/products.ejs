                                                <% if(product.discount !=0) {%>
                                                    <p class="discount"> 
                                                        <%= product.discount %>% OFF</p>
                                                        <% } else{null} %>
                                            </div>                            
                                            <a class="add-cart" href="/products/productCart" role="button"><p>Agregar al carrito</p></a>
                                        </div>
                                    </article>
                                </a>
                            <% } ) %>
                        </div>
                    </section>
                    <section >
                        <h2 class="title">ESPEJOS</h2>
                    </section>
                        <section class="last-visit">
                            <div class="products">
                                <% mirror.forEach ( product => { %>
                                    <a class="link-detail" href="/products/detalle/<%= product.id %>"> <!-- Faltaria agregar la ruta dinamica con el :id y tambien agregarselo al route del detalle -->
